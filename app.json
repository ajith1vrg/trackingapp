{
  "expo": {
    "name": "crazyholidays",
    "slug": "crazyholidays",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,

    "updates": { "fallbackToCacheTimeout": 0 },

    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },

    "plugins": [
      "expo-sqlite",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "We track your route even when the app is closed."
        }
      ]
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.crazyholidays.tmanager",
      "googleServicesFile": "./assets/GoogleService-Info.plist",
      "config": {
        "googleMapsApiKey": "AIzaSyD161ugLZJT_E6tG2uuXaVRvBpl55NyGn8"
      },
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "We track your location for route monitoring.",
        "NSLocationAlwaysUsageDescription": "We use your location even when app is closed.",
        "UIBackgroundModes": ["location", "fetch"],
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "package": "com.crazyholidays.tmanager",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "googleServicesFile": "./assets/google-services.json",

      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "FOREGROUND_SERVICE",
        "android.permission.FOREGROUND_SERVICE_LOCATION"
      ],
      "foregroundService": {
        "notificationTitle": "Location Tracking Active",
        "notificationBody": "Tracking running even in background.",
        "notificationColor": "#2196F3"
      },

      "config": {
        "googleMaps": {
          "apiKey": "AIzaSyD161ugLZJT_E6tG2uuXaVRvBpl55NyGn8"
        }
      }
    },

    "web": { "favicon": "./assets/favicon.png" },

    "extra": {
      "eas": { "projectId": "46303191-0ed4-4c5a-bc74-2ed9cc132092" },
      "googleMapsApiKey": "AIzaSyD161ugLZJT_E6tG2uuXaVRvBpl55NyGn8"
    }
  }
}